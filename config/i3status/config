general {
  output_format = "none"
  colors = true
  color_good = "#a3be8c"
  color_bad = "#bf616a"
}

order += "cpu_temperature 0"
order += "ethernet enp3s0"
order += "volume master"
order += "time"

cpu_temperature 0 {
  format = "cpu: %degrees°C"
}

time {
  # format = "🕑 %H:%M"
  format = "%H:%M"
}

ethernet enp3s0 {
  /* format_up = "🌐 %ip" */
  format_up = "enp3s0: %ip"
  format_down = "enp3s0: down"
}

volume master {
  format = "♪: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
