#!/bin/bash

# In case of screen, ensure hostname is echoed to status line
# Must be set before PS1
case "$TERM" in
  screen*)
    PROMPT_COMMAND="printf '\033k${HOSTNAME}\033\\';"${PROMPT_COMMAND}
    ;;
  *)
    unset PROMPT_COMMAND
    ;;
esac

CYAN='\[\033[36m\]';
GREEN='\[\033[32m\]'
WHITE='\[\033[37m\]'
ENDCOLOR="\[\033[m\]"

# Use escape sequence to include cwd in the title bar
case $TERM in
  xterm*|rxvt*|screen*)
    TITLEBAR='\[\e]0;\w\a\]';
    ;;
  *)
    TITLEBAR='';
    ;;
esac

export PS1="$TITLEBAR[$CYAN\u$ENDCOLOR@$GREEN\h $WHITE\W$ENDCOLOR]\$ "
